@model IEnumerable<Dictionary> 
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <form method="get" asp-action="Index">
                 <p>
                    <input type="search" value="@ViewData["GetDefinitions"]" name="definitonSearch" class="form-control me-sm-2" placeholder="Search definition"></input>
                    <input type="submit" value="Search" class="btn btn-secondary my-2 my-sm-0"></input> |
                     <a asp-action="Index">Get all definitons</a>
                </p>
            </form>
            <h2 class="text-primary">Definition List<h2/>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Dictionary" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Definition
            </a>
        </div>
    </div>
    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Definition Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Dictionary" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Dictionary" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>